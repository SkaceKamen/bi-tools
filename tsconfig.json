{
	"compilerOptions": {
		"incremental": true,
		"target": "esnext",
		"module": "commonjs",
		"sourceMap": true,
		"outDir": "./dist",
		"importHelpers": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"lib": ["es2019"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"references": [
		{ "path": "./packages/preprocessor" },
		{ "path": "./packages/sqf-parser" },
		{ "path": "./packages/sqf-analyzer" },
		{ "path": "./packages/sqf-linter" },
		{ "path": "./packages/enforce-script-parser" },
		{ "path": "./packages/config-parser" },
		{ "path": "./packages/pbo-reader" },
		{ "path": "./packages/sqf-commands" }
		//{ "path": "./packages/cmd" }
	]
}
