{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"sourceMap": true,
		"inlineSourceMap": false,
		"declaration": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"files": ["src/index.ts"]
}
